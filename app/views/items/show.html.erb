<!-- app/views/items/show.html.erb -->
<div class="mt-8 h-screen my-auto">
  <h1 class="text-2xl font-bold mb-4"><%= @item['name'] %></h1>

  <div class="bg-white rounded shadow p-4">
    <p><strong>Description:</strong> <%= @item['description'] %></p>
    
    <% if @item['games'].present? %>
      <% @item['games'].each do |game_url| %>
        <% game_id = game_url.split('/').last %>
        <% game_response = ZeldaApiService.new.fetch_game(game_id) %>
        <% game_name = game_response['data']['name'] if game_response['success'] %>
        
        <% if game_name %>
          <% game_link = game_path(game_id) %>
          <p><%= link_to 'Games: ', games_path, class: 'font-bold hover:underline' %><%= link_to game_name, game_link, class: 'text-blue-500 hover:underline' %></p>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
